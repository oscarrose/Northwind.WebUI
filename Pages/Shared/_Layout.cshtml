<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["title"]-Northwind</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@

</head>
<body>

    @*Aqui empieza el navbar*@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar navbar-dark bg-primary border-bottom box-shadow mb-3 ">
            <div class="container">
                <a class="navbar-brand" style="font-size:35px;" asp-area="" asp-page="/Index">Northwind</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" style="font-size:20px" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" style="font-size:20px" asp-page="/PageListOrder">List Order</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" style="font-size:20px" asp-page="/PageOrders">Orders</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @*Aqui  termina el navbar*@


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("styles", required: false)
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Northwind<a asp-area=""></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
